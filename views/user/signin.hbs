
    <div class="col-md-4 offset-md-4">
    
<form action="/users" method="post">
    <div class="text-center">
        <h3>Signin</h3>
    </div>
    {{#each errors}}
        <div class="alrt alert-danger" style="border-radius: 7px;">
            <p class="text-center">{{this}}</p>
            </div>
    {{/each}}
    <div class="form-group">
        <label for="cardno">CardNumber</label>
        <input type="number" name="cardno" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="code">Code</label>
        <input type="password" name="code" class="form-control"/>
    </div>
    <input type="hidden" name = "_csrf" value="{{token}}">
    <div class="text-center">   
    <input type="submit" class="btn btn-primary" value="Signin"/>
    </div>
</form>
 