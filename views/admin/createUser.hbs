
    <div class="col-md-4 offset-md-4">
    
<form action="/users/createUser" method="post">
    <div class="text-center">
        <h3>CreateUser</h3>
    </div>
    {{#each error}}
        <div class="alrt alert-danger" style="border-radius: 7px;">
            <p class="text-center">{{this}}</p>
            </div>
    {{/each}}
    <div class="form-group">
        <label for="cno">CardNumber</label>
        <input type="number" name="cno" class="form-control" required/>
