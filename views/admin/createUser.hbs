        <input type="text" name="ne" class="form-control" placeholder="Neighbourhood"required/>
    </div>
    <div class="form-group">
        <label for="ssn">ssn</label>
        <input type="text" name="ssn" class="form-control" required/>
    </div>
    <div class="form-group">
        <label for="personno">PersonNumber</label>
        <input type="text" name="personno" class="form-control" required/>
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" required/>
    </div>
    <div class="from-group">
        <label for="role">Role</label>
        <input list="urol" name ="role"class="form-control" required>
    </div>
